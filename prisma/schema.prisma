// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//DB model
//employee //userrole = 6213
model Employee {
  id String @id @default(uuid())

  userName     String
  numHours     Int                    @default(40)
  password     String
  firstName    String
  lastName     String
  roles        Int[]                  @default([6213])
  refreshToken String                 @default("")
  availability EmployeeAvailability[]
  requestOff   RequestOff[]
  shifts       EmployeeShift[]
  store        Store                  @relation(fields: [storeId], references: [id])
  storeId      String
}

model EmployeeAvailability {
  id         String   @id @default(uuid())
  day        String
  startTime  String
  endTime    String
  Employee   Employee @relation(fields: [employeeId], references: [id])
  employeeId String
}

model RequestOff {
  id     String   @id @default(uuid())
  status String   @default("")
  date   DateTime @db.Date

  Employee   Employee? @relation(fields: [employeeId], references: [id])
  employeeId String?
}

model EmployeeShift {
  id          String    @id @default(uuid())
  dayOfWeek   String
  date        DateTime  @db.Date
  Employee    Employee? @relation(fields: [employeeId], references: [id])
  employeeId  String?
  typeOfShift ShiftType @relation(fields: [shiftTypeId], references: [id])

  ReleasedShift ReleasedShift[]
  shiftTypeId   String
}

model ReleasedShift {
  id              String        @id @default(uuid())
  status          String        @default("")
  roles           Int
  orginShift      EmployeeShift @relation(fields: [employeeShiftId], references: [id])
  employeeShiftId String
}

model ShiftType {
  id            String          @id @default(uuid())
  startTime     String
  endTime       String
  roles         Int
  EmployeeShift EmployeeShift[]
}

model Day {
  id           String @id @default(uuid())
  dayOfWeek    String
  startTime    String
  endTime      String
  numEmployees Int
}

model Store {
  id   String @id @default(uuid())
  name String

  Employee Employee[]
}
